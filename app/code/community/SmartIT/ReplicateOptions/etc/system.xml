<?xml version="1.0" encoding="UTF-8"?>
<config>
  <tabs>
    <SmartIT>
      <label>SmartIT</label>
      <sort_order>195</sort_order>
    </SmartIT>
  </tabs>
  <sections>
    <replicateoptions translate="label" module="ReplicateOptions">
      <label>Replicate Options</label>
      <tab>SmartIT</tab>
      <frontend_type>text</frontend_type>
      <sort_order>71</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label">
          <label>General</label>
          <sort_order>600</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enabled translate="label">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <comment><![CDATA[ When enabled options will be copied (and replace) once a day to the target products. ]]></comment>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled>
          </fields>
        </general>
        <productsourcefilter translate="label">
          <label>Product Source Filter</label>
          <sort_order>700</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <sourcesku translate="label">
              <label>Product Source SKU</label>
              <comment><![CDATA[ SKU of product which options and choices will be copied from. ]]></comment>
              <frontend_type>text</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </sourcesku>
          </fields>
        </productsourcefilter>
        <producttargetfilter>
          <label>Product Target Filter</label>
          <comment><![CDATA[ If none specified it will replace ALL products options and choices. ]]></comment>          
          <sort_order>800</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <namekeywords translate="label">
              <label>Name Keywords</label>
              <comment><![CDATA[ Keyword to find on name ]]></comment>
              <frontend_type>text</frontend_type>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </namekeywords>
          </fields>
        </producttargetfilter>
      </groups>
    </replicateoptions>
  </sections>
</config>